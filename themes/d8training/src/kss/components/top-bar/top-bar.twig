<div class="top-bar">
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-lg-6 col-sm-8">
        <div class="call-to-action">
          {% if email %}<p><i class="fa fa-envelope-o"></i>Email: <a href="mailto:{{ email }}">{{ email }}</a></p>{% endif %}
          {% if telephone %}<p><i class="fa fa-phone"></i>Telephone: <a href="callto:{{ telephone }}">{{ telephone }}</a></p>{% endif %}
        </div>
      </div>
      <div class="col-md-5 col-lg-6 col-sm-4">
        {% if cta %}<div class="book-table-popup">
          <a href="{{ cta.url }}">{{ cta.text }}</a>
        </div>{% endif %}
        {% if social_items %}
        <div class="top-social-bookmark">
          <ul>
            {% for item in social_items %}
            <li><a href="{{ item.url }}" target="_blank"><i class="fa fa-{{ item.type }}"></i></a></li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>